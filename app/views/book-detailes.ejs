<%- include('partials/header') %>

  <div class="book-details">
    <div class="book-container">
      <img src="/images/<%= book.cover %>" alt="Couverture de <%= book.title %>"/>

      <div class="book-info">
        
        <h3><%= book.title %></h3>
        <p>
          <strong>Auteur :</strong>
          <% if (book.authors && book.authors.length > 0) { %> <%=
          book.authors[0].firstname %> <%= book.authors[0].name %> <% } else {
          %> Auteur inconnu <% } %>
        </p>

        <p>
          <strong>Genre :</strong>
          <% if (book.gender) { %> <%= book.gender.name %> <% } else { %> Genre
          inconnu <% } %>
        </p>

        <p>
          <strong>Description</strong>
          <% if (book.description) { %> <%= book.description %> <% } else { %>
          Genre inconnu <% } %>
        </p>

        <p>
          <strong>Année de publication :</strong>
          <% if (book.year) { %> <%= book.year %> <% } else { %> Pas de
          description disponible <% } %>
        </p>
      </div>
    </div>
  </div>

  <div class="action-buttons">
    <% if (typeof user !=='undefined' && user) { %>
    <form action="/livres/<%= book.id %>/mark-read" method="POST">
      <button type="submit" aria-label="Marquer comme lu">Lu</button>
    </form>

    <form action="/livres/<%= book.id %>/add-to-read" method="POST">
      <button type="submit" aria-label="Ajouter aux livres à lire">
        À Lire
      </button>
    </form>
    <% } %>
    <a href="/" aria-label="Retour à la bibliothèque">Retour</a>
  </div>

<%- include('partials/footer') %>
