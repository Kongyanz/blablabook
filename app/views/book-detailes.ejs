<body>
    <header class="header">
        <h1>BLABLABOOK</h1>
        <!--barre de recherche au centre du header -->
        <!--<form action="/search" method="GET">  -->

        <div class="nav-search">
            <form action="" method="GET">
                <input type="text" name="query" placeholder="Rechercher un livre" aria-label="Champ de recherche">
                <button type="submit" aria-label="lancer la recherche">üîç</button>
            </form>
        </div>
        <!-- section bouton -->
